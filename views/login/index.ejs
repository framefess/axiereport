<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>
        <%= title %>
    </title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>

<body class="bg-secondary">
    <%- include('../navtop')%>

        <div class="row justify-content-center m-1">
            <div class="col-4 justify-content-center">
                <div class="card text-white bg-dark ">
                    <div class="card-header">LOGIN</div>
                    <div class="card-body text-center">
                        <form>
                            <div class="row mb-3">
                                <label for="id" class="col-sm-4 col-form-label text-end">ID</label>
                                <div class="col">
                                    <input type="text" class="form-control" id="id">
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="password" class="col-sm-4 col-form-label text-end">Password</label>
                                <div class="col">
                                    <input type="password" class="form-control" id="password">
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col">
                                    <button type="button" class="btn btn-primary float-end" id="login">Login</button>
                                    <button type="button" class="btn btn-primary float-start"
                                        id="register">Register</button>
                                </div>
                            </div>


                        </form>
                        <div class="row" id="error" hidden>
                            <div class="col">
                                <div class="alert alert-danger" role="alert">
                                    can't login
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>


        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
            crossorigin="anonymous"></script>
        <script src="https://unpkg.com/feather-icons"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"
            integrity="sha512-894YE6QWD5I59HgZOGReFYm4dnWc1Qt5NtvYSaNcOP+u1T9qYdvdihz0PPSiiqn/+/3e7Jo4EaG7TubfWGUrMQ=="
            crossorigin="anonymous" referrerpolicy="no-referrer"></script>
        <script>
            feather.replace()
        </script>
        <script>
            $("#login").on("click", function () {
                // console.log($("#id").val());
                // console.log($("#password").val());
                let id = $("#id").val();
                // console.log("ðŸš€ ~ file: index.ejs ~ line 57 ~ id", id)
                let password = $("#password").val();
                // console.log("ðŸš€ ~ file: index.ejs ~ line 59 ~ password", password)

                if (id && password) {
                    console.log(id);

                    let data = { "id": id, "password": password };
                    fetch('/login', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                            // 'Content-Type': 'application/x-www-form-urlencoded',
                        },
                        body: JSON.stringify(data),
                    })
                        .then(response => {
                            // response.json()
                            console.log(response);
                            if (response.status == 200) {
                                location.href = '/'
                            }

                        })
                        .catch(error => {
                            console.error('Error:', error);
                            $('#error > div > div').text(error)
                            $('#error').prop('hidden', false)
                        });
                } else {
                    $('#error > div > div').text("error:can't login")
                    $('#error').prop('hidden', false)
                }
            });

            $("#register").on("click", function () {
                // console.log($("#id").val());
                // console.log($("#password").val());
                let id = $("#id").val();
                // console.log("ðŸš€ ~ file: index.ejs ~ line 57 ~ id", id)
                let password = $("#password").val();
                // console.log("ðŸš€ ~ file: index.ejs ~ line 59 ~ password", password)

                if (id && password) {
                    console.log(id);
                    let data = { "id": id, "password": password };
                    fetch('/addaccount', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                            // 'Content-Type': 'application/x-www-form-urlencoded',
                        },
                        body: JSON.stringify(data),
                    })
                        .then(response => {
                            // response.json()
                            console.log(response);
                            if (response.status == 201) {
                                location.href = '/'
                            }
                        })
                        .catch(error => {
                            console.error('Error:', error);
                            $('#error > div > div').text(error)
                            $('#error').prop('hidden', false)
                        });
                } else {
                    $('#error > div > div').text("error:can't register")
                    $('#error').prop('hidden', false)
                }
            });
        </script>
</body>

</html>